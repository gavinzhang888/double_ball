<p id="notice"><%= notice %></p>

<h1>History Balls</h1>
<%= will_paginate @questions %>

<table>
  <thead>
    <tr>
      <th><%= I18n.t :"history_ball.period_number" %></th>
      <th><%= I18n.t :"history_ball.date" %></th>
      <th><%= I18n.t :"history_ball.week_num" %></th>
      <th><%= I18n.t :"history_ball.red1" %></th>
      <th><%= I18n.t :"history_ball.red2" %></th>
      <th><%= I18n.t :"history_ball.red3" %></th>
      <th><%= I18n.t :"history_ball.red4" %></th>
      <th><%= I18n.t :"history_ball.red5" %></th>
      <th><%= I18n.t :"history_ball.red6" %></th>
      <th><%= I18n.t :"history_ball.blue" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @history_balls.each do |history_ball| %>
      <tr>
        <td><%= history_ball.period_number %></td>
        <td><%= history_ball.date %></td>
        <td><%= history_ball.week_num %></td>
        <td><%= history_ball.red1 %></td>
        <td><%= history_ball.red2 %></td>
        <td><%= history_ball.red3 %></td>
        <td><%= history_ball.red4 %></td>
        <td><%= history_ball.red5 %></td>
        <td><%= history_ball.red6 %></td>
        <td><%= history_ball.blue %></td>
        <td><%= link_to 'Show', history_ball %></td>
        <td><%= link_to 'Edit', edit_history_ball_path(history_ball) %></td>
        <td><%= link_to 'Destroy', history_ball, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @questions %>

<%= link_to 'New History Ball', new_history_ball_path %>
